// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "quarkus",
					"fileLocation": [
						"relative",
						"${workspaceFolder}/getting-started/src/main/resources/templates"
					],
					"pattern": [
						{
							"regexp": "\\[(\\d+)\\]\\s(.*):(\\d+):(\\d+)\\s\\-\\s{(.*)}:\\s(.*)$",
							"file": 2,
							"line": 3,
							"column": 4,
							"message": 6
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*Scanning for projects...",
						"endsPattern": "(^.*Quarkus .* started in .*\\.)|(^.* ERROR .* Failed to start)"
					}
				}
			],
			"group": "build",
			"label": "quarkus:dev (getting-started)",
			"command": "./mvnw quarkus:dev ",
			"windows": {
				"command": ".\\mvnw.cmd quarkus:dev "
			},
			"options": {
				"cwd": "${workspaceFolder}/getting-started"
			}
		},
		{
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "quarkus",
					"fileLocation": [
						"relative",
						"${workspaceFolder}/getting-started/src/main/resources/templates"
					],
					"pattern": [
						{
							"regexp": "\\[(\\d+)\\]\\s(.*):(\\d+):(\\d+)\\s\\-\\s{(.*)}:\\s(.*)$",
							"file": 2,
							"line": 3,
							"column": 4,
							"message": 6
						}
					],
					"background": {
						"activeOnStart": true
					}
				}
			],
			"group": "build",
			"label": "package -Pnative (getting-started)",
			"command": "./mvnw package -Pnative ",
			"windows": {
				"command": ".\\mvnw.cmd package -Pnative "
			},
			"options": {
				"cwd": "${workspaceFolder}/getting-started"
			}
		}
	]
}